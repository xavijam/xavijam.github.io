{% for post in site.categories.project %}
  {
    "title":    "{{ post.title }}",
    "excerpt":  "{{ post.excerpt | newline_to_br | strip_newlines }}",
    "date":     "{{ post.date | date: '%Y-%m-%d' }}",
    "url":      "{{ post.url }}",
    "by":       [ "xavijam" ],
    {% if post.link %}
    "link":     "{{ post.link }}",
    {% endif %}
    "type":     "{{ post.type }}"
  } {% if forloop.last == false %},{% endif %}
{% endfor %},
{% for post in site.categories.presentation %}
  {
    "title":    "{{ post.title }}",
    "excerpt":  "{{ post.excerpt | newline_to_br | strip_newlines }}",
    "date":     "{{ post.date | date: '%Y-%m-%d' }}",
    "url":      "{{ post.url }}",
    "type":     "{{ post.type }}"
  } {% if forloop.last == false %},{% endif %}
{% endfor %},